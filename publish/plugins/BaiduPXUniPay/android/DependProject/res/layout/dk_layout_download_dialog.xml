<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@+id/dk_parent_panel" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    android:background="@drawable/new_bg_dialog"
    android:orientation="vertical" >
    <!-- title -->
	<include layout="@layout/dk_dialog_header"/>
    
	<LinearLayout 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:orientation="horizontal">
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/dk_txt_game_name"
		    android:textColor="@android:color/black"
		    android:textSize="14sp"
		    android:gravity="center"
		    />
		<TextView 
		    android:id="@+id/txtGameName"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@android:color/black"
		    android:textSize="14sp"
		    android:singleLine="true"
		    android:editable="false"
		    android:paddingLeft="5dp"
		    android:gravity="center_vertical"/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:orientation="horizontal">
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/dk_txt_game_size"
		    android:textColor="@android:color/black"
		    android:textSize="14sp"
		    android:gravity="center"
		    />
		<TextView 
		    android:id="@+id/txtGameSize"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@android:color/black"
		    android:textSize="14sp"
		    android:singleLine="true"
		    android:ellipsize="none"
		    android:paddingLeft="5dp"
		    android:gravity="center_vertical"/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:orientation="horizontal">
		<TextView 
		    android:id="@+id/txtGameContent"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#F08F1E"
		    android:textSize="14sp"
		    />
	</LinearLayout>
	<ImageView
		    android:id="@+id/gameImage"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
		    android:layout_marginTop="2dp"
	    	android:layout_marginLeft="12dp"
	    	android:layout_marginRight="12dp"
	    	android:visibility="gone"
		    />
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="10dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:gravity="center"
	    android:orientation="vertical">
	    <Button 
		    android:id="@+id/startAndSaveDownloadbtn"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:text="@string/dk_txt_start_download"
		    android:textColor="@android:color/white"
			android:textSize="16sp"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:background="@drawable/dk_btn_pointer_game_selector"/>
	    <Button 
		    android:id="@+id/nomalDownloadbtn"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:textColor="@android:color/black"
			android:textSize="16sp"
			android:paddingTop="10dp"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"/>
	</LinearLayout>
</LinearLayout>
